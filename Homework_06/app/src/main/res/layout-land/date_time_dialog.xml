<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/text_date"
            app:layout_constraintWidth_percent="0.50"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20sp"
            android:text="@string/input_date"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/red"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"/>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:textSize="20sp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@+id/text_date"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/input_time"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/red"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"/>

        <ImageView
            android:id="@+id/image_clock_alarm"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/date_picker"
            app:layout_constraintBottom_toBottomOf="@id/date_picker"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/alarm_clock"
            />

        <DatePicker
            android:theme="@style/DateDialogTheme"
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/text_date"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TimePicker
            android:theme="@style/DateDialogTheme"
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/text_date"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/button_ok_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/date_picker"
            app:layout_constraintRight_toLeftOf="@+id/button_cancel_date_time"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginHorizontal="10dp"
            android:background="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/purple_500"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/button_cancel_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/date_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginHorizontal="10dp"
            android:text="@string/ok"
            android:background="@color/white"
            android:textColor="@color/purple_500"
            android:textSize="20sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
