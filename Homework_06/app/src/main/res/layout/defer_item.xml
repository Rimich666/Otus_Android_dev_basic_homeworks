<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="7dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                app:layout_constraintWidth_default="percent"
                android:id="@+id/image_defer"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.25"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2:3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="0dp"

                tools:src="@sample/pictures" />

            <TextView
                android:id="@+id/text_name_defer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/delete_image"
                app:layout_constraintLeft_toRightOf="@+id/image_defer"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                tools:text="@sample/names" />

            <TextView
                android:id="@+id/text_short_description_defer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/text_name_defer"
                app:layout_constraintRight_toRightOf="@+id/text_name_defer"
                app:layout_constraintTop_toBottomOf="@+id/text_name_defer"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                tools:text="@sample/description_short" />

            <ImageView
                android:id="@+id/delete_image"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/back_image_button"
                android:alpha="1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/delete_event"
                tools:src="@sample/icons"/>

            <ImageView
                android:id="@+id/deferred_image_"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/back_image_button"
                android:alpha="1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@+id/delete_image"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="5dp"
                android:src="@drawable/save_time_color"
                tools:src="@sample/icons"/>
            <TextView
                android:id="@+id/id_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/alarm"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/text_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/id_work"
                app:layout_constraintLeft_toRightOf="@id/alarm"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/alarm"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@+id/image_defer"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/alarm_clock_p"
                tools:src="@sample/icons"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>