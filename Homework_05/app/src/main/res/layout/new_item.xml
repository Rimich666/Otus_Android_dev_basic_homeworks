<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="7dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintWidth_default="percent"
            android:id="@+id/image"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.25"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="0dp"

            tools:src="@sample/pictures" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/heart_image"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toRightOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            tools:text="@sample/names" />

        <TextView
            android:id="@+id/text_short_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/textName"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintRight_toRightOf="@+id/textName"
            app:layout_constraintTop_toBottomOf="@+id/textName"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            tools:text="@sample/description_short" />

        <Button
            android:id="@+id/button_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/text_short_description"
            android:text="@string/butt_detail"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:id="@+id/heart_image"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/back_image_button"
            android:alpha="1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            tools:src="@sample/icons"/>
        <ImageView
            android:id="@+id/detail_image"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/back_image_button"
            android:alpha="1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@+id/heart_image"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            tools:src="@sample/icons"/>
        <ImageView
            android:id="@+id/deferred_image"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/back_image_button"
            android:alpha="1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@+id/detail_image"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            tools:src="@sample/icons"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>